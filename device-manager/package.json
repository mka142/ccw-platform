{
  "name": "server",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "vitest": "^2.1.4",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "bun run index.ts",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test:up": "docker compose up -d mongo && ./scripts/init-mongo.sh",
    "test:down": "docker compose down",
    "test": "bun run test:up && bun x vitest run --config vitest.config.ts && bun run test:down"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/ws": "^8.18.1",
    "body-parser": "^2.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "mongodb": "^6.20.0",
    "ws": "^8.18.3"
  }
}
